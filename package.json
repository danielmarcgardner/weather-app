{
  "name": "weather-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "moment": "^2.23.0",
    "node-sass-chokidar": "^1.3.4",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.2",
    "jest-enzyme": "^7.0.1",
    "jest-mock-axios": "^2.1.11",
    "npm-run-all": "^4.1.5",
    "react-scripts": "2.1.2",
    "sass-lint": "^1.12.1"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "PORT=8000 react-scripts start",
    "start": "PORT=8000 npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --verbose=false --env=jsdom",
    "test:coverage": "react-scripts test --env=jsdom --coverage --runInBand",
    "lint": "eslint . --quiet",
    "lint:all": "eslint . && sass-lint 'src/styles/**/*.scss' --verbose --no-exit",
    "lint:fix": "eslint . --fix --quiet",
    "lint:sass": "sass-lint 'src/styles/**/*.scss' --verbose --no-exit"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
